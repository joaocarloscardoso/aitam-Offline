<html>
    <!-- based on no-side bar template -->
    <%- include('../partials/head'); %>
    <body class="is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<%- include('../partials/header'); %>

			<!-- Main -->
				<section class="wrapper style1">
					<form method="POST" action="/portal/language">					
						<div class="container">
							<div id="content">
								<!-- Content -->
									<article>
										<header>
											<h2>Working language</h2>
											<p>
												We currently offer <%=catalog.length %> languages to work with the tool.<br/>
												Please select the preferred language during working  session from the list bellow.
											</p>
											<p>
												<b>Note:</b> The default language is english. Missing translation items will be displayed in this language!
											</p>
										</header>
										<p>
											<% if(catalog.length > 0) { %>
												<%- include('../partials/langoption'); %>
											<% } %>
										</p>
										<input type="hidden" id="langSelected" name="langSelected" value="<%= sessionlang %>"/>
										<div class="col-12">
											<ul class="actions">
												<li><input type="submit" class="button alt" value="Save" /></li>
											</ul>
										</div>
				
									</article>
							</div>
						</div>
					</form>
				</section>

				<script>
					function handleClick(myRadio) {
						document.getElementById("langSelected").value = myRadio.value;
					}
				</script>
			<!-- Footer -->
			<%- include('../partials/footer'); %>

		</div>

		<!-- Scripts -->
		<%- include('../partials/scripts'); -%>

	</body>
</html>
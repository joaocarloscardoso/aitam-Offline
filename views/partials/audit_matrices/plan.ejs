<section id="contact" class="col-6 col-12-narrower">
    <header>
        <h2></h2>
        <h2><%= Matrix.Issue %> (<%= Matrix.PluginId %>)</h2>
        <p><%= Matrix.Domain %></p>
        <p><%= Matrix.Area %></p>
    </header>
    <% if(msg != ''){ %>
        <div class="col-12" id="save_auditmatrix">
            <p>
                <span class="successformtext"><%= msg %></span><br/>
            </p>
        </div>
    <% } %>    
    <% if(AuditErrors){ %>
    <div class="col-12" id="err_auditmatrix">
        <p>
            <% AuditErrors.forEach(function(error){ %>
                <span class="errformtext">* <%= error.msg %></span><br/>
            <% }) %>    
        </p>
    </div>
    <% } %>
    <form method="POST" action="/auditMatrices/planMatrix">
        <div class="row gtr-50">
            <div class="col-12">
                <ul class="actions">
                    <li><a href="/generatedocs/docplanMatrix?plugin=<%= Matrix.PluginId %>&domain=<%= Matrix.DomainId %>&area=<%= Matrix.AreaId %>&issue=<%= Matrix.IssueId %>" class="button"><%=appButtons.generateDocument.name %></a></li>
                    <% if (source === "map") { %>
                        <li><a href="/analytics/AuditMap" class="button"><%=appButtons.close.name %></a></li>
                    <% } else { %>
                        <li><a href="/planaudit/auditplanning" class="button"><%=appButtons.close.name %></a></li>
                    <% } %>
                    <li><input type="submit" class="button alt" value="<%=appButtons.save.name %>" /></li>
                </ul>
            </div>
            <div class="col-12">
                <%=appAudit.plan.matrix.objectives %><br/>
                <textarea name="objectives" id="objectives" placeholder="Objectives" rows="2"><%= Matrix.Objectives %></textarea>
                <input type="hidden" id="plugin" name="plugin" value="<%= Matrix.PluginId %>"/>
                <input type="hidden" id="domain" name="domain" value="<%= Matrix.DomainId %>"/>
                <input type="hidden" id="area" name="area" value="<%= Matrix.AreaId %>"/>
                <input type="hidden" id="issue" name="issue" value="<%= Matrix.IssueId %>"/>
            </div>
            <div class="col-12">
                <%=appAudit.plan.matrix.criteria %><br/>
                <textarea name="criteria" id="criteria" placeholder="<%=appAudit.plan.matrix.criteria %>" rows="4"><%= Matrix.Criteria %></textarea>
            </div>
            <div class="col-12">
                <%=appAudit.plan.matrix.informationRequired %><br/>
                <textarea name="inforequired" id="inforequired" placeholder="<%=appAudit.plan.matrix.informationRequired %>" rows="6"><%= Matrix.Inforequired %></textarea>
            </div>
            <div class="col-12">
                <%=appAudit.plan.matrix.methodOfAnalysis %><br/>
                <textarea name="method" id="method" placeholder="<%=appAudit.plan.matrix.methodOfAnalysis %>" rows="6"><%= Matrix.Method %></textarea>
            </div>
            <div class="col-12">
                <%=appAudit.plan.matrix.foundPreviously %><br/>
                <textarea name="foundpreviously" id="foundpreviously" placeholder="<%=appAudit.plan.matrix.foundPreviously %>" rows="4"><%= Matrix.Found %></textarea>
            </div>
            <div class="col-12">
                <%=appAudit.plan.matrix.conclusion %><br/>
                <textarea name="conclusion" id="conclusion" placeholder="<%=appAudit.plan.matrix.conclusion %>" rows="4"><%= Matrix.Conclusion %></textarea>
            </div>
            <div class="col-12">
                <ul class="actions">
                    <li><a href="/generatedocs/docplanMatrix?plugin=<%= Matrix.PluginId %>&domain=<%= Matrix.DomainId %>&area=<%= Matrix.AreaId %>&issue=<%= Matrix.IssueId %>" class="button"><%=appButtons.generateDocument.name %></a></li>
                    <% if (source === "map") { %>
                        <li><a href="/analytics/AuditMap" class="button"><%=appButtons.close.name %></a></li>
                    <% } else { %>
                        <li><a href="/planaudit/auditplanning" class="button"><%=appButtons.close.name %></a></li>
                    <% } %>
                    <li><input type="submit" class="button alt" value="<%=appButtons.save.name %>" /></li>
                </ul>
            </div>
        </div>
    </form>
</section>

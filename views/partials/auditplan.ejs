                            <li><input type="submit" class="button alt" value="<%=appButtons.save.name %>" /></li>
                        <% } %>
                    </ul>
                </div>
                <p>
                    <% if(plancatalog.length > 0) { %>
                        <p><%=appAudit.plan.riskFilter.description %> <a href="#" onclick="filterRisk('3'); return false;"><%=appAudit.plan.riskFilter.criteria1 %></a>, <a href="#" onclick="filterRisk('2'); return false;"><%=appAudit.plan.riskFilter.criteria2 %></a>, <a href="#" onclick="filterInclude(); return false;"><%=appAudit.plan.riskFilter.criteria3 %></a>, <a href="#" onclick="showAllRows(); return false;"><%=appAudit.plan.riskFilter.criteria4 %></a>
                        <p><div class="row gtr-50">
                        <a style="border-style: none;" href="javascript:GetListOptions();" data-tooltip="<%=appButtons.planExportList.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planExportList.name %></a>
                        &nbsp;
                        <a style="border-style: none;" href="/generatedocs/docauditprogramme" data-tooltip="<%=appButtons.planAuditProgramme.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planAuditProgramme.name %></a>
                        &nbsp;

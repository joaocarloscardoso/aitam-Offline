                        &nbsp;
                        <a target="_blank" style="border-style: none;" href="/generatedocs/heatmatrix" data-tooltip="<%=appButtons.planRiskHeatMatrix.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planRiskHeatMatrix.name %></a>
                        &nbsp;
                        <a style="border-style: none;" href="/generatedocs/docmatricesList" data-tooltip="<%=appButtons.planCollectionMatrices.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planCollectionMatrices.name %></a></p>
                        &nbsp;</div></p>
                        <table id='tablecatalog'>
                            <thead>
                                <%- include('./auditplanheader'); %>
                            </thead>    
                            <tbody>
                                <%- include('./auditplanrow'); %>
                            </tbody>
                        </table>
                        <input type="hidden" name="rows_count" id="rows_count" value="<%= plancatalog.length %>"/> 
                        <p>
                        <a style="border-style: none;" href="javascript:GetListOptions();" data-tooltip="<%=appButtons.planExportList.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planExportList.name %></a>
                        &nbsp;
                        <a style="border-style: none;" href="/generatedocs/docauditprogramme" data-tooltip="<%=appButtons.planAuditProgramme.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planAuditProgramme.name %></a>
                        &nbsp;
                        <a style="border-style: none;" href="/generatedocs/docmethodmatrix" data-tooltip="<%=appButtons.planAuditMatrix.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planAuditMatrix.name %></a>
                        &nbsp;
                        <a target="_blank" style="border-style: none;" href="/generatedocs/heatmatrix" data-tooltip="<%=appButtons.planRiskHeatMatrix.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planRiskHeatMatrix.name %></a>
                        &nbsp;
                        <a style="border-style: none;" href="/generatedocs/docmatricesList" data-tooltip="<%=appButtons.planCollectionMatrices.tooltip %>"><img src="../images/export32t.png" alt="" style="vertical-align: text-bottom; display: inline-block;"/>&nbsp; <%=appButtons.planCollectionMatrices.name %></a></p>
